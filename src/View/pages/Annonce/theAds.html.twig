{% endblock %}

{% block content %}
    <div class="container">
        <div class="header-title">
            <h1>Les Annonces</h1>
        </div>
        {% include 'component/_cards.html.twig' with { myAnnonces: annonces, services: services } %}
    </div>
{% endblock %}

{% block javascript %}
<script>
    var elements = document.getElementsByClassName("supprimer");
    var elements2 = document.getElementsByClassName("modifier");

    for (var i = 0; i < elements.length; i++) {
        elements[i].style.display = "none";
    }
    for (var i = 0; i < elements2.length; i++) {
        elements2[i].style.display = "none";
    }
</script>
{% endblock %}
