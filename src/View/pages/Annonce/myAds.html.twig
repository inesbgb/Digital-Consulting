{% block javascript %}
{# masque les bons icones de la card (ici contacter et payer) #}
<script>
    var elements = document.getElementsByClassName("envoyer");
    var elements2 = document.getElementsByClassName("paiement");

    for (var i = 0; i < elements.length; i++) {
        elements[i].style.display = "none";
    }
    for (var i = 0; i < elements.length; i++) {
        elements2[i].style.display = "none";
    }
</script>
